  "bugs": {
    "url": "https://github.com/Doonyby/quiz-ski-conditions/issues"
  },
  "homepage": "https://github.com/Doonyby/quiz-ski-conditions#readme",
  "devDependencies": {
    "chokidar-cli": "^1.2.0"
  }
}
